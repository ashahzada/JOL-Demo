<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<LocationMap>
		<location>
			<name>Library</name>
			<attribute>physical</attribute>
			<type>room</type>
			<topology>autonomous</topology>
			<relatedlocations>
				<locationname>DiscussionRoom</locationname>
				<relationship>contains</relationship>
			</relatedlocations>
		</location>
		<location>
			<name>DiscussionRoom</name>
			<attribute>physical</attribute>
			<type>room</type>
			<topology>nested</topology>
			<relatedlocations>
				<relatedlocation>
					<locationname>Library</locationname>
					<relationship>parent</relationship>
				</relatedlocation>
			</relatedlocations>
		</location>
		<location>
			<name>LibraryThermalZone</name>
			<attribute>functional</attribute>
			<type>thermal</type>
			<topology>autonomous</topology>
			<relatedlocations>
				<relatedlocation>
					<locationname>Library</locationname>
					<relationship>contains</relationship>
				</relatedlocation>
				<relatedlocation>
					<locationname>DiscussionRoom</locationname>
					<relationship>contains</relationship>
				</relatedlocation>
			</relatedlocations>
		</location>
		<location>
			<name>LibraryLightingZone</name>
			<attribute>functional</attribute>
			<type>lighting</type>
			<topology>autonomous</topology>
			<relatedlocations>
				<relatedlocation>
					<locationname>Library</locationname>
					<relationship>contains</relationship>
				</relatedlocation>
			</relatedlocations>
		</location>
		<location>
			<name>DiscussionRoomLightingZone</name>
			<attribute>functional</attribute>
			<type>lighting</type>
			<topology>nested</topology>
			<relatedlocations>
				<relatedlocation>
					<locationname>DiscussionRoom</locationname>
					<relationship>contains</relationship>
				</relatedlocation>
				<relatedlocation>
					<locationname>LibraryLightingZone</locationname>
					<relationship>parent</relationship>
				</relatedlocation>
			</relatedlocations>
		</location>
	</LocationMap>

	<Groups>
		<group>
			<name>Lighting</name>
			<type>SV-Follower</type>
			<SVRole>Building.RoomLightMgr</SVRole>
			<FollowerRoles>
				<FollowerRole>Building.LightInterface</FollowerRole>
				<FollowerRole>Building.LightSensorInterface</FollowerRole>
			</FollowerRoles>
			<FormationCriteria>
				<criteria>Location</criteria>
				<attribute>functional</attribute>
				<type>lighting</type>
			</FormationCriteria>
		</group>
		<group>
			<name>ThermalZone</name>
			<type>SV-Follower</type>
			<SVRole>Building.ThermalZoneMgr</SVRole>
			<FollowerRoles>
				<FollowerRole>Building.RoomLightReporter</FollowerRole>
				<FollowerRole>Building.ExternalRadiationSensor</FollowerRole>
				<FollowerRole>Building.RoomTempSensor</FollowerRole>
				<FollowerRole>Building.WindowInterface</FollowerRole>
				<FollowerRole>Building.HVACinterface</FollowerRole>
			</FollowerRoles>
			<FormationCriteria>
				<criteria>Location</criteria>
				<attribute>functional</attribute>
				<type>thermal</type>
			</FormationCriteria>
		</group>

	</Groups>

</configuration>


